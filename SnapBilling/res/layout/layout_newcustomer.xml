<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/darker_gray"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/customer_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_launcher" />

    <RelativeLayout
        android:id="@+id/customer_add_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_toLeftOf="@+id/cancel_button"
        android:layout_toRightOf="@+id/customer_image_view"
        android:gravity="center_vertical"
        android:paddingLeft="20dp" >

        <EditText
            android:id="@+id/customer_number_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Customer Phone"
            android:inputType="phone"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/customer_name_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@id/customer_number_edit_text"
            android:ems="13"
            android:hint="Customer Name"
            android:inputType="textPersonName"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/customer_address_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/customer_name_edit_text"
            android:layout_below="@id/customer_number_edit_text"
            android:ems="25"
            android:hint="Customer Address"
            android:inputType="textPostalAddress"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/save_button"
        android:text="Cancel" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:text="Save" />

</RelativeLayout>