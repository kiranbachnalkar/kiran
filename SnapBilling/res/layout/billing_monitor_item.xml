<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark" >

    <EditText
        android:id="@+id/billing_monitor_search_edittext"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:drawableLeft="@android:drawable/ic_search_category_default"
        android:inputType="phone"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:id="@+id/billing_header_layout"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_below="@+id/billing_monitor_search_edittext"
        android:orientation="horizontal"
        android:weightSum="1" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.1"
            android:text="Sl."
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.6"
            android:text="Products"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.3"
            android:text="Price"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <ListView
        android:id="@+id/billing_list"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/billing_total_footer_layout"
        android:layout_below="@+id/billing_header_layout"
        android:visibility="gone" 
        >
    </ListView>


    <ImageView
        android:id="@+id/billing_monitor_add_cart"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:src="@drawable/add_cart" />

    <RelativeLayout
        android:id="@+id/billing_total_footer_layout"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_above="@+id/billing_monitor_remove_cart" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="Total "
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="Total "
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/billing_monitor_remove_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" >

        <Button
            android:id="@+id/remove_cart_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@android:drawable/ic_delete" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/remove_cart_button"
            android:src="@drawable/shopping_cart" />
    </RelativeLayout>

</RelativeLayout>